<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.campus.manage.mapper.CamCollegeMapper">
    
    <resultMap type="CamCollege" id="CamCollegeResult">
        <result property="collegeId"    column="college_id"    />
        <result property="collegeName"    column="college_name"    />
        <result property="collegeMoney"    column="college_money"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectCamCollegeVo">
        select college_id, college_name, college_money, create_time, update_time from cam_college
    </sql>

    <select id="selectCamCollegeList" parameterType="CamCollege" resultMap="CamCollegeResult">
        <include refid="selectCamCollegeVo"/>
        <where>  
            <if test="collegeName != null  and collegeName != ''"> and college_name like concat('%', #{collegeName}, '%')</if>
            <if test="collegeMoney != null "> and college_money = #{collegeMoney}</if>
        </where>
    </select>
    
    <select id="selectCamCollegeByCollegeId" parameterType="Long" resultMap="CamCollegeResult">
        <include refid="selectCamCollegeVo"/>
        where college_id = #{collegeId}
    </select>
        
    <insert id="insertCamCollege" parameterType="CamCollege" useGeneratedKeys="true" keyProperty="collegeId">
        insert into cam_college
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="collegeName != null and collegeName != ''">college_name,</if>
            <if test="collegeMoney != null">college_money,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="collegeName != null and collegeName != ''">#{collegeName},</if>
            <if test="collegeMoney != null">#{collegeMoney},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateCamCollege" parameterType="CamCollege">
        update cam_college
        <trim prefix="SET" suffixOverrides=",">
            <if test="collegeName != null and collegeName != ''">college_name = #{collegeName},</if>
            <if test="collegeMoney != null">college_money = #{collegeMoney},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where college_id = #{collegeId}
    </update>

    <delete id="deleteCamCollegeByCollegeId" parameterType="Long">
        delete from cam_college where college_id = #{collegeId}
    </delete>

    <delete id="deleteCamCollegeByCollegeIds" parameterType="String">
        delete from cam_college where college_id in 
        <foreach item="collegeId" collection="array" open="(" separator="," close=")">
            #{collegeId}
        </foreach>
    </delete>
</mapper>
